@model _4BroShop.Models.EFModels.Category

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Sản phẩm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table style="margin-left:50px">
        <tr>
            <td style="float: right"><b>@Html.LabelFor(model => model.Title, "Tên loại")</b></td>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="float: right"><b>@Html.LabelFor(model => model.Icon, "Icon")</b></td>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td>
                @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="float: right"><b>@Html.LabelFor(model => model.IsActive, "Là hoạt dộng")</b></td>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td class="checkbox">
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="float: right"><b></b></td>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td>
                <input type="submit" value="Tạo" class="btn btn-default" />
            </td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>