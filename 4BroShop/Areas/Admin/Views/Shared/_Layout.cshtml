@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>4BroShop</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/PageList.css" rel="stylesheet" />
    <style>
        .dropdown-toggle .d-none {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container-fluid overflow-hidden">
        <div class="row vh-100 overflow-auto">
            <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-dark d-flex sticky-top">
                <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2 text-white">
                    <button class="btn btn-dark d-block d-sm-none me-2" type="button" id="sidebarToggle">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5">4Bro<span class="d-none d-sm-inline">Shop</span></span>
                    </a>

                    <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link px-sm-0 px-2">
                                <i class="fa-solid fa-home"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-users"></i><span class="ms-1 d-none d-sm-inline">Account</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                                <li><a class="dropdown-item" href="#">Thêm</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Sign out</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link px-sm-0 px-2">
                                <i class="fa-solid fa-layer-group"></i><span class="ms-1 d-none d-sm-inline">Categories</span>
                            </a>
                        </li>
                    </ul>
                    <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="" alt="User" width="28" height="28" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">@User.Identity.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @Html.ActionLink("Profile", "Detail", "AccountManager", new { id = User.Identity.GetUserId() }, new { @class = "dropdown-item" })
                                }
                                else
                                {
                                    @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "dropdown-item" })
                                }
                            </li>
                            <li><a class="dropdown-item" href="#">SignOut</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col d-flex flex-column h-sm-100">
                <main class="row overflow-auto">
                    <div class="col pt-4">
                        @RenderBody()
                    </div>
                </main>
                <footer class="row bg-light py-4 mt-auto">
                    <div class="col">
                        <div class="text-center">
                            <p>Admin Dashboard &copy; <span id="currentYear"></span></p>
                            <p>Contact: admin@example.com | Phone: +123456789</p>
                            <p>
                                <a href="#">Privacy Policy</a> |
                                <a href="#">Terms of Service</a>
                            </p>
                        </div>
                    </div>
                </footer>

                <script>
                    // Hiển thị năm hiện tại tự động
                    document.getElementById("currentYear").innerHTML = new Date().getFullYear();
                </script>
            </div>
        </div>
    </div>
</body>
</html>
