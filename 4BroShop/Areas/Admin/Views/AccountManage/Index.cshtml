@using PagedList
@using PagedList.Mvc
@model IPagedList<_4BroShop.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <!-- Thư viện Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+z24d25Fv5rMk7qU8Wf4q2GfFtqL0XMIgI5xqjQ" crossorigin="anonymous">

    <!-- Thư viện FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-Qn/M8SzrEAtCR6wmztdvf5WcBkCvRQ6K/VrTx4UUEsdqRMA+a+Ay5guIhgxWAApwzIzV4S8+8HhQgJT5uNQlbw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Các thông tin khác trong phần head -->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                @if (Model != null && Model.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Email</th>
                                <th>Full Name</th>
                                <th>Phone</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-warning btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Detail", new { id = user.Id })" class="btn btn-info btn-sm">
                                            <i class="fa fa-info"></i> Details
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Hiển thị nút phân trang -->
                    <div class="text-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
                    </div>
                }
                else
                {
                    <p>Chưa có người dùng.</p>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
